<html>
    <head>
        <title>
            <%=title %>

        </title>
        <link rel="stylesheet" href="/css/layout.css">
        <script src="https://kit.fontawesome.com/8e6acf52e0.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <header>

        </header>
        <div class = "todo-form">
            <form action="/create-planner" method = "POST">
                <div class = item>
                <input type = "text" name = "item" placeholder = "input task">
                </div>
                <div class = "date-category">
                <input type="date" name="date" placeholder="enter due date..">
                <select name = "category">
                    <option value="work">WORK</option>
                    <option value="personal">PERSONAL</option>
                </select>
                </div>
                <button type="submit" class = "submit">Add to Planner</button>
            </form>
        </div>
        
        <div class = "todo-list-container">
            <ul>
                <%for (let i of todoItems){%>
                    <li class = "item">
                        <p><%=i.item%></p>
                        <p><%=i.category%></p>
                        <p><%=i.date%></p>
                        <div class ="delete-button">
                            <a href = "/delete-item/?id=<%=i._id%>">
                            <i class = "fas fa-window-close"></i></a>
                        </div>
                    </li>  
                <%}%>
            </ul>
        </div>
    
        
    </body>
</html>